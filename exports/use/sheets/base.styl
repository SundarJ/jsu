*
*::before
*::after {
  box-sizing inherit
}

html {
  box-sizing border-box
}

body {
  font 100%/1.4 'Comic Neue', sans-serif

  background-color #3f6884
  color #2f2f2f
}

h1, h2 {
  font-family inherit
}

.mdl-card {
  background-color #e7ecec
  padding 1em

  .content & {
    background-color #fafbfb
  }
}

.mdl-card__media {
  background none
}

.mdl-grid {
  padding 1em 0
  justify-content space-around
  width 100%
}

.mdl-card {
  min-height 0
}

.mdl-card * {
  margin auto
}
