*
*::before
*::after {
  box-sizing inherit
}

html {
  box-sizing border-box
}

body {
  font 100%/1.4 'Comic Neue', sans-serif

  background-color #5d8aa8
  color #2f2f2f
}

h1, h2 {
  font-family inherit
}

.mdl-card
.mdl-card__media {
  background-color #fafbfb
}

.mdl-grid, .mdl-cell {
  
}

.mdl-grid {
  padding 1em 0
  justify-content space-around
  width 100%
}

.mdl-cell {
  padding 1em
  margin 0
  width auto
}

.mdl-card {
  min-height 0
}

.mdl-card * {
  margin auto
}
